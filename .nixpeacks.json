{
  "phases": {
    "setup": {
      "nixPkgs": ["python310", "nodejs-18_x"]
    },
    "install": {
      "cmds": [
        "pip3 install --upgrade pip",
        "pip3 install -r requirements.txt",
        "npm install"
      ]
    },
    "build": {
      "cmds": ["npm run build"]
    }
  },
  "start": {
    "cmd": "gunicorn api.index:app"
  }
}